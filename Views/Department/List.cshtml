@model IEnumerable<team2Geraldton.Models.DepartmentDto>

@{
    ViewBag.Title = "List";
}
<link rel="stylesheet" href="~/Content/content/StyleSheet1.css" />
<h2>List of all the Departments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="customers">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Timings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Timings)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DepartmentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DepartmentID }) |
            @Html.ActionLink("Delete", "DeleteConfirm", new { id=item.DepartmentID })
        </td>
    </tr>
}

</table>
